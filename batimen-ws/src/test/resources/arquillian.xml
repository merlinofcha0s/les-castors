<?xml version="1.0"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://jboss.org/schema/arquillian"
	xsi:schemaLocation="http://jboss.org/schema/arquillian
    http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

	<defaultProtocol type="Servlet 3.0" />

	<engine>
		<property name="deploymentExportPath">target/arquillian</property>
	</engine>

	<container qualifier="glassfish-managed" default="true">
		<configuration>
			<property name="glassFishHome">${glassfish.location}</property>
			<property name="adminHost">${glassfish.adminHost}</property>
			<property name="adminPort">${glassfish.adminPort}</property>
			<property name="adminHttps">${glassfish.adminHttps}</property>
			<property name="adminUser">${glassfish.adminUser}</property>
			<property name="adminPassword">${glassfish.adminPassword}</property>
			<property name="domain">${glassfish.domain}</property>
			<property name="allowConnectingToRunningServer">true</property>
			<property name="outputToConsole">true</property>
		</configuration>
	</container>
</arquillian>